{
  "compilerOptions": {
      "lib": ["ESNext"],
      "target": "ESNext",
      "module": "CommonJS",
      "outDir": "bin",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "*.test.*", "bin"]
}
